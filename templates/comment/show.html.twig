{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ comment.body }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post_show', {'id': comment.post.id}) }}">back to post</a>
    {% if app.user == comment.author %}
        <a href="{{ path('comment_edit', {'id': comment.id}) }}">edit</a>
        {{ include('comment/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
